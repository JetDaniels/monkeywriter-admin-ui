<!DOCTYPE HTML>
<html>
<head>
    <title>Admin-UI</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link href="css/bootstrap.css" rel="stylesheet">
    <link href="css/bootstrap-grid.css" rel="stylesheet">
    <link href="css/custom.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <span class="navbar-brand h1"></span>
    <div class="collapse navbar-collapse">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="/home">Запросы</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/users">Пользователи</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/connections">Соединения</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/documents">Документы</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/roles">Роли</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/systems">Системы</a>
            </li>
        </ul>
        <form class="form-check-inline" action="/logout" method="POST">
            <button type="submit" class="btn btn-primary">Выйти</button>
        </form>
    </div>
</nav>
<div class="container info_block">
    <table class="table">
        <thead>
        <tr>
            <th>Система</th>
            <th>URL</th>
            <th>Тип системы</th>
        </tr>
        </thead>
        <tbody>
        {{#systems}}
            <tr>
                <td>{{systemName}}</td>
                <td>{{link}}</td>
                <td>{{systemType}}</td>
            </tr>
        {{/systems}}
        </tbody>
    </table>
</div>
<div class="container info_block">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Добавить
    </button>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Добавить систему</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="" name="OutsideSystemDTO" action="/addSystem" method="POST">
                        <div class="form-group">
                            <label for="systemName" class="form-label">Имя подключения</label>
                            <input type="text" class="form-control" id="systemName" name="systemName">
                        </div>
                        <div class="form-group">
                            <label for="systemType" class="form-label">Тип подключения</label>
                            <select class="form-control" id="systemType" name="systemType">
                                <option>LOCAL</option>
                                <option>REMOTE</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="link" class="form-label">URL</label>
                            <input type="text" class="form-control" id="link" name="link">
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Добавить</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="js/jquery.js" type="text/javascript"></script>
<script src="js/popper.min.js" type="text/javascript"></script>
<script src="js/bootstrap.min.js" type="text/javascript"></script>
<script src="js/bootstrap.bundle.js" type="text/javascript"></script>
</body>
</html>